<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>

<TitledPane collapsible="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="262.0"
            prefHeight="400.0" prefWidth="262.0" text="Cards" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" minHeight="400.0" minWidth="262.0" prefHeight="400.0" prefWidth="262.0" spacing="10.0">
        <Button fx:id="cards_farm" mnemonicParsing="false" styleClass="normal-button" text="Farm">
            <tooltip>
                <Tooltip text="Restarts cards farming module for given bot instance."/>
            </tooltip>
        </Button>
        <Button fx:id="cards_loot" mnemonicParsing="false" styleClass="normal-button" text="Loot">
            <tooltip>
                <Tooltip text="Sends all booster packs and Steam trading cards (including foils if IsBotAccount) of given bot instance to SteamMasterID."/>
            </tooltip>
        </Button>
        <Button fx:id="cards_lootall" mnemonicParsing="false" styleClass="normal-button" text="Loot All">
            <tooltip>
                <Tooltip text="Sends all booster packs and Steam trading cards (including foils if IsBotAccount) of all bots instances to SteamMasterID."/>
            </tooltip>
        </Button>
        <Button fx:id="cards_unpack" mnemonicParsing="false" styleClass="normal-button" text="Unpack">
            <tooltip>
                <Tooltip text="Unpacks all booster packs stored in the inventory of current bot instance."/>
            </tooltip>
        </Button>
    </VBox>
</TitledPane>
