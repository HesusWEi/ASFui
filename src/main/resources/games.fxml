<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>

<TitledPane collapsible="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="262.0"
            prefHeight="400.0" prefWidth="262.0" text="Games" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" minHeight="400.0" minWidth="262.0" prefHeight="400.0" prefWidth="262.0" spacing="10.0">
        <Button fx:id="games_own" mnemonicParsing="false" styleClass="normal-button" text="Own">
            <tooltip>
                <Tooltip text="Checks if current bot instance already owns given appIDs and/or gameNames (can be part of the game's name).&#13;It can also be * to show all games available."/>
            </tooltip>
        </Button>
        <Button fx:id="games_ownall" mnemonicParsing="false" styleClass="normal-button" text="Own All">
            <tooltip>
                <Tooltip text="Checks if all bots instances already owns given appIDs and/or gameNames (can be part of the game's name).&#13;It can also be * to show all games available."/>
            </tooltip>
        </Button>
        <Button fx:id="games_play" mnemonicParsing="false" styleClass="normal-button" text="Play">
            <tooltip>
                <Tooltip text="Switches to manual farming - launches given appIDs on current bot instance."/>
            </tooltip>
        </Button>
    </VBox>
</TitledPane>
